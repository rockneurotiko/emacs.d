    <div class="tableFooterElement">{{ (data | filter:{"$selected": true}).length }} selected</div>
    <div class="tableFooterElement right" ng-if="!TC.itemsSelected()">
        <img src="images/movistar/arrow_left_black.png" ng-click="(TC.params.page()>1) ? TC.params.page(TC.params.page()-1) : null">
        <p>{{params.page()}} of {{params.npages}}</p>
        <img src="images/movistar/arrow_right_black.png" ng-click="(TC.params.page()<TC.params.total()/TC.params.count()) ? TC.params.page(TC.params.page()+1) : null">
    </div>

    <div class="tableFooterBtn" ng-if="TC.itemsSelected()">
        <ul>
            <li class="foot-list" ng-repeat="option in TC.options"
                ng-click="TC.clear(option); option.shown = !option.shown" ng-class="{'clicked': option.shown}">
                <div>{{option.name}}</div>
                <ul ng-if="option.shown">
                    <li ng-repeat="value in option.value" ng-click="TC.dynamic_click(value)"><div class="tableFooter-subitem">{{value.name}}</div></li>
                </ul>
            </li>

